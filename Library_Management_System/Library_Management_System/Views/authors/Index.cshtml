    * License: https://bootstrapmade.com/license/
    ======================================================== -->
</head>
<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center">
        <div class="container d-flex align-items-center">

            <div class="logo me-auto">
                <h1><img src="../imgs/books.png" width="30" height="30" /><a href="index.html">LMS</a></h1>
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <a href="index.html"><img src="../assets/img/logo.png" alt="" class="img-fluid"></a>-->
            </div>

            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Publisher", "Index", "publishers")</li>
                    <li>@Html.ActionLink("Member", "Index", "members")</li>
                    <li>@Html.ActionLink("Author", "Index", "authors")</li>

                    <li class="dropdown">
                        <a href="#"><span>Accounts</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li>@Html.ActionLink("Admin", "About", "Home")</li>
                            <li>@Html.ActionLink("Member", "member", "Home")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Admin", "signup", "Home")</li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

            <div class="header-social-links d-flex align-items-center">
                <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></i></a>
            </div>

        </div>
    </header><!-- End Header -->

    <main id="main">

        <!-- ======= Breadcrumbs ======= -->
        <section class="breadcrumbs">
            <div class="container">

                <div class="d-flex justify-content-between align-items-center">
                    <h2>Author Details</h2>
                    <ol>
                        <li><a href="index.html">Home</a></li>
                        <li>Author Details</li>
                    </ol>
                </div>

            </div>
        </section><!-- End Breadcrumbs -->
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <center>
                            <h4>Author Details</h4>
                        </center>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <center>
                            <img width="100px" src="../imgs/writer.png" />

                        </center>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <hr>
                    </div>
                </div>

                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.authorName)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.authorName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.authorID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.authorID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.authorID })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </main>
